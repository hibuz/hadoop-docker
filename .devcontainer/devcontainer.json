{
    "name": "Build docker image",
    "service": "hadoop-dev",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "mhutchie.git-graph",
          "seatonjiang.gitmoji-vscode"
        ],
        "settings": {
          "locale": "en"
        }
      }
    },
    "forwardPorts": [
        9083,
        9870,
        8088,
        10002,
        16010,
        19888,
        4040,
        8080,
        18080,
        8083,
        9995
    ]
}
